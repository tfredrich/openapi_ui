{
  "oas_source": "./openapi.json",
  "api_base_url": "https://api.example.com",
  "security_config": {
    "type": "oauth2",
    "client_id": "admin-console-client",
    "auth_url": "https://auth.example.com/oauth/authorize",
    "token_url": "https://auth.example.com/oauth/token",
    "scopes": ["admin:read", "admin:write"]
  },
  "navigation": [
    {
      "label": "Resources",
      "path": "/v1/resources",
      "display_fields": ["id", "name", "status", "*"]
    },
    {
      "label": "User Management",
      "children": [
        {
          "label": "Users",
          "path": "/v1/users",
          "display_fields": ["user_id", "email", "created_at"],
          "list_overrides": {
            "hidden": ["internal_notes"],
            "labels": {
              "user_id": "User ID",
              "created_at": "Created"
            }
          },
          "form_overrides": {
            "layout": "multi-step",
            "steps": [
              {
                "id": "identity",
                "title": "Identity",
                "fields": ["email", "first_name", "last_name"]
              },
              {
                "id": "access",
                "title": "Access",
                "fields": ["role", "status"]
              }
            ],
            "field_overrides": {
              "hidden": ["system_flags"],
              "labels": {
                "first_name": "First name",
                "last_name": "Last name"
              },
              "widgets": {
                "status": "select"
              }
            }
          }
        },
        {
          "label": "Roles",
          "path": "/v1/roles",
          "display_fields": ["role_id", "name"]
        }
      ]
    }
  ]
}
